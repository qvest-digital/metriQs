{
  "name": "metriqs",
  "version": "0.0.1",
  "main": "main.js",
  "author": "qvest digital",
  "license": "GPL-3.0",
  "description": "made with love by qvest digital",
  "repository": {
    "type": "git",
    "url": "https://github.com/qvest-digital/metriQs.git"
  },
  "build": {
    "appId": "com.qvest-digital.metriqs",
    "productName": "metriQs",
    "copyright": "Copyright Â© 2022 qvest digital",
    "files": [
      "dist/metriqs/browser/**/*",
      "main.js",
      "preload.js",
      "node_modules/"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "publish": ["github"],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "publish": ["github"],
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "linux": {
      "publish": ["github"],
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run config && cross-env NODE_ENV=production ng build --configuration production",
    "config": "ts-node src/environments/set-env.ts",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build-electron": "npm run config && cross-env NODE_ENV=production ng build --base-href ./ --configuration production",
    "start-electron": "electron .",
    "pack-electron": "electron-builder --dir",
    "dist-electron": "cross-env NODE_ENV=production electron-builder -p never"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.1.0",
    "@angular/cdk": "^18.1.3",
    "@angular/common": "^18.1.0",
    "@angular/compiler": "^18.1.0",
    "@angular/core": "^18.1.0",
    "@angular/forms": "^18.1.0",
    "@angular/material": "^18.1.3",
    "@angular/platform-browser": "^18.1.0",
    "@angular/platform-browser-dynamic": "^18.1.0",
    "@angular/router": "^18.1.0",
    "angular-oauth2-oidc": "^17.0.2",
    "chart.js": "^4.4.3",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.2.1",
    "jira.js": "^4.0.1",
    "ng2-charts": "^6.0.1",
    "ngx-indexed-db": "^19.0.0",
    "ngx-toastr": "^19.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "update-electron-app": "^3.0.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.1.3",
    "@angular/cli": "^18.1.3",
    "@angular/compiler-cli": "^18.1.0",
    "@electron/fuses": "^1.8.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^22.1.0",
    "colors": "^1.4.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.2"
  }
}
